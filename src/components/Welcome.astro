---
import astroLogo from '../assets/astro.svg';
import kickforthImage from '../assets/kickforth.png';
import background from '../assets/background.svg';
---

<div class="bg-amber-300 rounded-[2vw] h-full drop-shadow-xl">
    <main class="mx-auto">
        <section class="mx-auto p-[4vw] flex flex-col md:flex-row md:items-start md:justify-between gap-8"> 
            
            <div class="md:w-2/3"> 
                <h1 class="pb-2 text-4xl sm:text-5xl md:text-6xl text-zinc-600"> 
                    Arlo Fenn
                </h1>
                <p class="text-lg sm:text-xl text-zinc-600">Footwear Designer / Shoemaker</p>
                <br />
                <p><a class="text-lg sm:text-xl text-zinc-600 hover:underline" href="mailto:arlofenn@gmail.com">arlofenn@gmail.com</a></p>
                <p class="text-lg sm:text-xl text-zinc-600">07927 651937</p>
            </div>

            
            <div class="md:w-1/3 flex md:justify-end"> 
                <img
                    src={kickforthImage.src}
                    alt="Kickforth Logo"
                    class="w-40 sm:w-40 md:w-48 h-auto mt-4 md:mt-0"
                />
            </div>
        </section>
    </main>
</div>

